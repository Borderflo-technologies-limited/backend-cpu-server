# Visa AI Interviewer - CPU Server Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./visa_ai_interviewer.db

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service Configuration
GROQ_API_KEY=your-groq-api-key-here

# File Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage
AUDIO_STORAGE_PATH=storage/audio
VIDEO_STORAGE_PATH=storage/videos

# GPU Service URLs (for local development)
VIDEO_SERVICE_HOST=localhost
VIDEO_SERVICE_PORT=8001
EVALUATION_SERVICE_HOST=localhost
EVALUATION_SERVICE_PORT=8002

# RunPod Configuration (for production)
RUNPOD_API_KEY=your-runpod-api-key
RUNPOD_ENDPOINT_ID=your-runpod-endpoint-id

# Auto-scaling Settings
MIN_GPU_INSTANCES=0
MAX_GPU_INSTANCES=2
SCALE_UP_THRESHOLD=3
SCALE_DOWN_THRESHOLD=1
MAX_COST_PER_HOUR=2.0

# Background Processing
REDIS_URL=redis://localhost:6379
QUEUE_NAME=gpu_processing_queue

# Interview Settings
MAX_INTERVIEW_DURATION=1800
QUESTIONS_PER_SESSION=10
PRE_GENERATION_ENABLED=true

# CORS Settings (add your frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60